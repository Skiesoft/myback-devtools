{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "module.config.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "ES5",
    "types": [ "node" ],
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
